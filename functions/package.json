{
  "name": "dyslexia-assist-functions",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "^20"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -w -p tsconfig.json",
    "lint": "eslint --ext .ts src",
